@model CategoryEditViewModel
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form asp-action="EditCategory" method="post" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label>Kategori Adı :</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ürün Seçiniz :</label>
        <span asp-validation-for="ProductId" class="text-danger"></span>
        <select class="form-control" asp-for="ProductId" asp-items="ViewBag.Products">
            <option value="-1">Seçiniz</option>
        </select>
    </div>
    <button type="submit" class="btn btn-info btn-sm">Kaydet</button>
</form>

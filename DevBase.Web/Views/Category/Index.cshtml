@model List<CategoryListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count != 0)
{
    <a asp-action="AddCategory" class="btn btn-info btn-sm my-2">Yeni Kategori Oluştur</a>
    <table class="table table-sm table-hover">
        <tr>
            <th>Kategori Adı</th>
            <th>Ürün Ad</th>
            <th>İşlem</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Name</td>
                <td>@item.Product.Name</td>
                <td>
                    <a asp-action="EditCategory" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="" data-toggle="modal" data-target="#silmeEkrani" data-barbaros="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="p-3 text-center mt-3 lead">
        <p>
            Herhangi bir kategori bulunamadı.
        </p>

        <a asp-action="AddCategory" class="btn btn-info btn-sm">Yeni Kategori Oluştur</a>

    </div>
}

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="silmeEkrani" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">UYARI</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Silmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                <button id="btnSil" type="button" class="btn btn-primary">Sil</button>
            </div>
        </div>
    </div>
</div>



<script src="~/js/model.js"></script>




